<style type="text/css">
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: sans-serif;
        font-size: 12px;
        line-height: 1.2;
        padding: 45px;
        width: 100%
    }

    .letterhead {
        margin-bottom: 25px;
    }

    .bill__header {
        width: 100%;
        display: flex;
        justify-content: space-between;
        margin-bottom: 25px;
    }

    .header {
        margin-top: 25px
    }

    table {
        margin-top: 25px;
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td,
    th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }

    .bill-decription {
        margin-top: 25px;
    }

    .bank-details {
        margin-top: 50px;
        background-color: lightgrey;
        padding: 20px;
    }
</style>

<html>

<body>
    <div class="letterhead">
        <p class="letterHead__content">{{profileName}}</p>
        <p class="letterHead__content">{{profileStreet}}</p>
        <p class="letterHead__content">{{profilePostal}} {{profileCity}}</p>
    </div>
    <div class="letterhead">
        <p class="letterHead__content">{{companyName}}</p>
        <p class="letterHead__content">{{companyStreet}}</p>
        <p class="letterHead__content">{{companyPostal}} {{companyCity}}</p>
    </div>
    <div class="bill__header">
        <strong>Rechnung:</strong>
        <p>{{date}}</p>
    </div>
    <div className="bill__details">
        <p>Rechnungsnummer: {{billNr}}</p>
        <p>Steuernummer: {{taxNumber}}</p>
        {{#if taxId}}
        <p>Ust-ID: {{taxId}}</p>
        {{/if}}
    </div>
    <div class="bill__amount">
        <div class="header">
            <strong>Erbrachte Leistungen:</strong>
        </div>
        <div class="bill__amount-content">
            <table>
                <tbody>
                    <tr>
                        <th>Typ:</th>
                        <th>Anzahl:</th>
                        <th>Beizeichnung:</th>
                        <th>Preis:</th>
                    </tr>
                    {{#each jobs}}
                    <tr>
                        <td>{{this.type}}</td>
                        <td>{{this.amount}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this.price}} €</td>
                    </tr>
                    {{/each}}
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>Gesamt: {{result}} €</td>
                </tbody>
            </table>
        </div>
        <div class="bill-decription">
            {{breaklines billDescription}}
        </div>
        <div class="bank-details">
            <div>
                <strong>Bankverbindung:</strong>
            </div>
            <div>
                <small>Name: {{bankFirstName}} {{bankLastName}}</small>
            </div>
            <div>
                <small>Iban: {{iban}}</small>
            </div>
            <div>
                <small>Bic: {{bic}}</small>
            </div>
        </div>
    </div>
</body>

</html>